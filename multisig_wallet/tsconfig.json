{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./typechain-types"
    ],
    "types": [
      "hardhat",
      "mocha",
      "node"
    ],
    "lib": ["es2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types/**/*",
    "./deploy"
  ],
  "exclude": ["node_modules", "dist", "cache", "artifacts"],
  "files": ["./hardhat.config.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
